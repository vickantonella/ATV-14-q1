<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Buscador de Livros</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1>BIBLIOTECA ONLINE</h1>
    <form action="/buscar" method="GET">
      <div>
        <label for="titulo">Título:</label>
        <input type="text" id="titulo" name="titulo">
        <input type="radio" id="tipoBuscaTitulo" name="tipoBusca" value="titulo" checked>
        <label for="tipoBuscaTitulo">Buscar por título</label>
      </div>
      <div>
        <label for="ano">Ano:</label>
        <input type="number" id="ano" name="ano">
        <input type="radio" id="tipoBuscaAno" name="tipoBusca" value="ano">
        <label for="tipoBuscaAno">Buscar por ano</label>
      </div>
      <button type="submit">Buscar</button>
    </form>
    
    <form action="/mostrar-todos" method="GET" style="display: inline-block;">
      <button type="submit">Mostrar todos os livros</button>
    </form>
    
    <div class="resultado">
      <% if (resultado && resultado.length > 0) { %>
        <h2>Resultados da busca:</h2>
        <table>
          <thead>
            <tr>
              <th>id</th>
              <th>título</th>
              <th>autor</th>
              <th>ano</th>
            </tr>
          </thead>
          <tbody>
            <% resultado.forEach(livro => { %>
              <tr>
                <td><%= livro.id %></td>
                <td><%= livro.titulo %></td>
                <td><%= livro.autor %></td>
                <td><%= livro.ano %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else if (resultado && resultado.length === 0 && !error) { %>
        <p>Nenhum livro encontrado.</p>
      <% } else if (error) { %>
        <p><%= error %></p>
      <% } %>
    </div>
  </body>
</html>
